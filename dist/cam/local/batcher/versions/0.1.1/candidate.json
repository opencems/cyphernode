{
  "version": "0.1.1",
  "dependencies": [
    {
      "label": "api",
      "version": "v0"
    }
  ],
  "directories": [
    "logs",
    "data"
  ],
  "files": {
    "config.json":"data/config.json",
    "docker-compose.yaml": "docker-compose.yaml"
  },
  "isExposed":true,
  "port": 8000,
  "availableRoles": [
    {
      "name": "user",
      "description": "Standard user, can spend and receive",
      "autoAssign": false
    }
  ],
  "accessPolicies": [
    {
      "patterns": [".+"],
      "roles": ["*"],
      "actions": ["options"],
      "effect": "allow"
    },
    {
      "patterns": ["favicon.ico$"],
      "roles": ["*"],
      "actions": ["get"],
      "effect": "allow"
    },
    {
      "patterns": [".+"],
      "roles": ["user"],
      "actions": ["*"],
      "effect": "allow"
    }
  ]
}
